<xml>
    <uri>/api/net/net-mode</uri>
    <request>
        <NetworkMode>03</NetworkMode>
        <NetworkBand>3FFFFFFF</NetworkBand>
        <LTEBand>40</LTEBand>
    </request>
</xml>

<!--
    NetworkMode
    ###########
    00 - automatically (all networks) 
    01 - only 2G 
    02 - only 3G 
    0201 - 3G preferred
    03 - Only 4G (LTE) 
    0302 - 4G preferred (LTE)
    99 - no changes 

    NetworkBand
    ###########
    80 - GSM1800 
    300 - GSM900 
    80000 - GSM850 
    200000 - GSM1900 
    400000 - UMTS B1 (2100) 
    800000 - UMTS B2 (1900) 
    4000000 - UMTS B5 (850) 
    2000000000000 - UMTS B8 (900) 
    1 - BC0A 
    2 - BC0B 
    4 - BC1 
    8 - BC2 
    10 - BC3 
    20 - BC4 
    40 - BC5 
    400 - BC6 
    800 - BC7 
    1000 - BC8 
    2000 - Bc9 
    4000 - BC10 
    8000 - BC11 
    10000000 - BC12 
    20000000 - BC13 
    80000000 - BC14 
    3FFFFFFF - all supported 

    LTEBand
    #######
    1 - B1 (FDD 2100) 
    4 - B3 (FDD 1800) 
    40 - B7 (FDD 2600) 
    44 - B3/B7 (FDD 1800/2600 CA)
    80 - B8 (FDD 900) 
    80000 - B20 (FDD 800) 
    2000000000 - B38 (TDD 2600) 
    8000000000 - B40 (TDD 2300) 
    800C5 - EU band (LTE Band 1, 3, 7, 8, 20) 
    800D5 - band EU / Asia / Africa (LTE Band 1, 3, 5, 7, 8, 20) 
    7FFFFFFFFFFFFFFF - all band 
-->
